<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.PostActivity">

    <TextView
        android:id="@+id/prof_name_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor Name"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/prof_description_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor Description"
        android:textSize="@dimen/basic_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prof_name_post" />

    <TextView
        android:id="@+id/prof_grade_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor Grade"
        android:textSize="@dimen/basic_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prof_description_post" />


</androidx.constraintlayout.widget.ConstraintLayout>